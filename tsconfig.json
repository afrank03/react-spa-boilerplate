{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es6", 
      "dom", 
      "es2016", 
      "es2017","ESNext",
      "DOM"
    ],
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "~/*": [ "./*" ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/tests/**/*.spec.tsx",
    "src/tests/**/*.test.tsx"
  ]
}